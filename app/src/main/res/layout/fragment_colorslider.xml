<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.colorslider.ColorSliderFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="413dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/color"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/colorslider_example"
                android:contentDescription="@string/colorhex_colorslider"
                android:visibility="visible" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <SeekBar
                android:id="@+id/rBar"
                style="@style/Widget.AppCompat.SeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255"
                android:progress="100"
                android:progressTint="@color/red"
                android:scaleX="1"
                android:scaleY="1"
                android:thumbTint="@color/red" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <SeekBar
                android:id="@+id/gBar"
                style="@style/Widget.AppCompat.SeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255"
                android:progress="25"
                android:progressTint="@color/green"
                android:scaleX="1"
                android:scaleY="1"
                android:thumbTint="@color/green" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <SeekBar
                android:id="@+id/bBar"
                style="@style/Widget.AppCompat.SeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255"
                android:progress="50"
                android:progressTint="@color/blue"
                android:scaleX="1"
                android:scaleY="1"
                android:thumbTint="@color/blue" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="# "
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/hexCode"
                        android:layout_width="91dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:ems="10"
                        android:text="@string/colorhex_colorslider"
                        android:textAllCaps="true" />

                    <Space
                        android:layout_width="125dp"
                        android:layout_height="25dp" />

                    <Button
                        android:id="@+id/button8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="@string/btn_colorslider" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal" />

    <include layout="@layout/fragment_scroll_up"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>